{
  "info": {
    "name": "Wichtlä.ch API",
    "description": "REST API für die Wichtlä.ch Android-App",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "wichtel"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{API_TOKEN}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "https://wichtlä.ch/api",
      "type": "string"
    },
    {
      "key": "API_TOKEN",
      "value": "your_api_token_here",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Groups",
      "item": [
        {
          "name": "Get All Groups",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/groups.php?page=1&per_page=20",
              "host": ["{{BASE_URL}}"],
              "path": ["groups.php"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "per_page", "value": "20"}
              ]
            }
          }
        },
        {
          "name": "Get Group by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/groups.php?id=1",
              "host": ["{{BASE_URL}}"],
              "path": ["groups.php"],
              "query": [{"key": "id", "value": "1"}]
            }
          }
        },
        {
          "name": "Get Group by Admin Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/groups.php?admin_token={{ADMIN_TOKEN}}",
              "host": ["{{BASE_URL}}"],
              "path": ["groups.php"],
              "query": [{"key": "admin_token", "value": "{{ADMIN_TOKEN}}"}]
            }
          }
        },
        {
          "name": "Create Group",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Weihnachten 2025\",\n  \"admin_email\": \"admin@example.com\",\n  \"budget\": 25.00,\n  \"description\": \"Firmen-Wichteln\",\n  \"gift_exchange_date\": \"2025-12-24\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/groups.php",
              "host": ["{{BASE_URL}}"],
              "path": ["groups.php"]
            }
          }
        },
        {
          "name": "Update Group",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"budget\": 30.00,\n  \"description\": \"Aktualisierte Beschreibung\"\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/groups.php?id=1",
              "host": ["{{BASE_URL}}"],
              "path": ["groups.php"],
              "query": [{"key": "id", "value": "1"}]
            }
          }
        },
        {
          "name": "Delete Group",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{BASE_URL}}/groups.php?id=1",
              "host": ["{{BASE_URL}}"],
              "path": ["groups.php"],
              "query": [{"key": "id", "value": "1"}]
            }
          }
        }
      ]
    },
